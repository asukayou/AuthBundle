{% extends 'AyAuthBundle::base.html.twig' %}

{% block title %}{{ 'Login' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/ayauth/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/ayauth/css/ayauth.css') }}" />
{% endblock %}

{% block body -%}
    <div class="container">
        <h4>{{ 'Please login to a system.' | trans }}</h4>

        <div class="ay_line_space"></div>

        {% if error %}
            <div class="ay_error">{{ error.message | trans }}</div>
        {% endif %}

        <form id="frm_post" action="{{ path('login_check') }}" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label required" for="username">{{ 'User ID' | trans }}</label>
                <div class="col-sm-10"><input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" /></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label required" for="password">{{ 'Password' | trans }}</label>
                <div class="col-sm-10"><input type="password" id="password" class="form-control" name="_password" /></div>
            </div>
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10"><input type="submit" name="login" value="{{ 'Login' | trans }}" class="btn btn-primary" /></div>
            </div>
        </form>
    </div>
{% endblock %}
